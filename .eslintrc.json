{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["standard-with-typescript", "plugin:no-unsanitized/DOM"],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "tsconfig.json"
    },
    "rules": {
        "@typescript-eslint/quotes": ["error", "double"],
        "@typescript-eslint/indent": "off",
        "@typescript-eslint/space-before-function-paren": "off"
    }
}
